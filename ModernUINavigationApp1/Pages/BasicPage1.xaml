<UserControl x:Class="ModernUINavigationApp1.BasicPage1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="English word to Hebrew Finder" Style="{StaticResource Heading2}" />
                <TextBlock Margin="0,0,0,10" ><LineBreak/><LineBreak/><LineBreak/></TextBlock>
                <TextBox x:Name="textBox" Height="23.907" TextWrapping="Wrap" Width="156.056" Margin="0,0,0,10" FlowDirection="RightToLeft"/>
                <Button x:Name="button" Content="Find Me" Height="24.228" Width="83.373" Margin="0,0,0,5" Click="onClick"/>
                <TextBlock x:Name="textBlock" Height="106.636" TextWrapping="Wrap" Width="257.245" FrameworkElement.FlowDirection="RightToLeft" Margin="0,0,0,5"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
